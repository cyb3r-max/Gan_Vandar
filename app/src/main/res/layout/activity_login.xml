<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_start_page"
    android:backgroundTint="#004d40"
    android:backgroundTintMode="screen"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/edtLoginUsername"
        android:layout_margin="15dp"
        android:layout_centerInParent="true"
        android:inputType="text"
        android:drawableLeft="@drawable/ic_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:drawablePadding="5dp"
        android:textColorHint="@color/White"
        android:textColor="@color/White"
        android:textSize="20sp"/>
    <EditText

        android:id="@+id/edtLoginPassword"
        android:layout_margin="15dp"
        android:drawableLeft="@drawable/ic_password"
        android:layout_below="@+id/edtLoginUsername"
        android:inputType="textPassword"
        android:drawablePadding="5dp"
        android:layout_width="match_parent"
        android:textColor="@color/White"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColorHint="@color/White"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_below="@+id/edtLoginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:text="Login"
        android:background="@drawable/bg_sign_in_btn"
        android:textColor="@color/White"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btnSignUP"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Account"
        android:textAllCaps="false"
        android:textColor="@color/LightGreen"/>


</RelativeLayout>
